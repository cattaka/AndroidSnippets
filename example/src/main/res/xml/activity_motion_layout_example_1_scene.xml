<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <!--<Transition-->
    <!--android:id="@+id/transition_top_bottom"-->
    <!--motion:constraintSetEnd="@+id/scene_top"-->
    <!--motion:constraintSetStart="@+id/scene_center">-->
    <!--<OnSwipe-->
    <!--motion:dragDirection="dragUp"-->
    <!--motion:touchAnchorId="@id/image"-->
    <!--motion:touchAnchorSide="top" />-->
    <!--</Transition>-->
    <Transition
        android:id="@+id/transition_start_bottom"
        motion:constraintSetEnd="@+id/scene_start_bottom"
        motion:constraintSetStart="@+id/scene_center">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@id/image"
            motion:touchAnchorSide="left" />
    </Transition>
    <Transition
        android:id="@+id/transition_end_bottom"
        motion:constraintSetEnd="@+id/scene_end_bottom"
        motion:constraintSetStart="@+id/scene_center">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@id/image"
            motion:touchAnchorSide="left" />
    </Transition>

    <ConstraintSet android:id="@+id/scene_center">
        <Constraint
            android:id="@id/image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:drawPath="asConfigured"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="translationY"
                motion:customDimension="0dp" />
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/scene_start_bottom">
        <Constraint
            android:id="@id/image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/scene_end_bottom">
        <Constraint
            android:id="@id/image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/scene_top">
        <Constraint
            android:id="@id/image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
        </Constraint>
    </ConstraintSet>
</MotionScene>
